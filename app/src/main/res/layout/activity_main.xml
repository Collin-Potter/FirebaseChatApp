<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginRegisterActivity" android:gravity="center">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="270dp"
            android:layout_height="348dp"
            android:gravity="center" android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Hello User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headerText"
                tools:layout_editor_absoluteX="174dp" android:textAlignment="center" android:textSize="24sp"
                android:paddingBottom="20dp"/>
        <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp" app:srcCompat="@drawable/app_logo"
                android:id="@+id/imageView"
        />
        <TextView
                android:text="Email: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailText"
                tools:layout_editor_absoluteY="119dp" tools:layout_editor_absoluteX="185dp" android:paddingTop="20dp"/>
        <TextView
                android:text="Is this you?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                tools:layout_editor_absoluteY="137dp" tools:layout_editor_absoluteX="171dp"
                android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="219dp"
            android:layout_height="202dp"
            android:gravity="center" android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.174">
        <Button
                android:text="Continue to Chat Room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/continueButton"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView2"/>
        <TextView
                android:text="OR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/signInButton"
                app:layout_constraintTop_toBottomOf="@+id/continueButton"
                app:layout_constraintBottom_toTopOf="@+id/signOutButton"/>
        <Button
                android:text="Sign out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signOutButton"
                app:layout_constraintStart_toStartOf="@+id/signInButton" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>
        <Button
                android:text="Sign In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signInButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toBaselineOf="@+id/signOutButton"
                app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>